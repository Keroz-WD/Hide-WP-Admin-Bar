{
  "manifest_version": 3,
  "name": "Hide WP Admin Bar",
  "version": "0.1.0",
  "description": "Hide WordPress admin bar.",
  "author": "kerozextensions@gmail.com",
  "permissions" : ["activeTab"],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"],
      "css": ["style/content.css"],
      "run_at": "document_end"  
    }
  ],
  "permissions" : ["activeTab"]
}